    <Grid>
        <Border CornerRadius="20" Background="#FF1C1E1F">
        </Border>
        <Grid HorizontalAlignment="Center" Height="56" Margin="0,10,0,0" VerticalAlignment="Top" Width="892">
            <Button Click="CrossButtonClick" Margin="815,2,0,0" Background="Transparent" BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image x:Name="buttonImage" Source="Icons/delete-button.png" Width="50" Height="50"/>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Arrow"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Click="CrossButtonClick" Margin="738,2,78,0" Background="Transparent" BorderThickness="0">
